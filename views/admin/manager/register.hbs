<!DOCTYPE html>
<html lang="ko">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>관리자 등록 - {{APP}}</title>

  {{>ad-style}}

</head>

<body class="az-body az-body-sidebar az-body-dashboard-nine az-white">

  {{>ad-hdn}}

  <div id="progress"></div>

  {{>ad-menu active='mgregister'}}

  <div class="az-content az-content-dashboard-nine">

    {{>ad-header}}

    <div class="az-content-header">
      <div class="az-content-header-top">
        <div>
          <h2 class="az-content-title mg-b-5 mg-b-lg-8">관리자 등록</h2>
          <p class="mg-b-0">새로운 관리자를 등록합니다.</p>
        </div>
      </div>

    </div>
    <div class="az-content-body">

      <div class="row">
        <div class="col-12">
          <div class="card card-body ht-xl-100p">
            <form method="POST" onsubmit="APP.createAdmin(); return false;">
              <div class="form-warp-first"></div>
              <div class="row form-warp align-items-center mg-t-0-f">
                <div class="form-title">
                  권한<span class="text-danger mg-l-3">*</span>
                </div>
                <div class="form-input mg-t-5 mg-md-t-0">
                  <select name="role" class="form-control wd-60p wd-md-20p wd-lg-15p">
                    <option value="" selected="" disabled="" hidden="">선택해주세요</option>
                    <option value="MASTER_ADMIN">대표</option>
                    <option value="MANAGER_ADMIN">매니저</option>
                    <option value="MEMBER_ADMIN">직원</option>
                  </select>
                </div>
              </div>

              <div class="row form-warp align-items-center">
                <div class="form-title">
                  아이디<span class="text-danger mg-l-3">*</span>
                </div>
                <div class="form-input mg-t-5 mg-md-t-0">
                  <input id="idInp" name="id" type="text"
                    class="form-control d-inline wd-60p wd-md-20p wd-lg-15p mg-r-10" maxlength="50"
                    onkeydown="APP.changeIdInp();">
                  <button id="idCheckBtn" type="button" class="btn btn-outline-dark btn-border btn-sm pd-x-15"
                    onclick="APP.checkId();">중복
                    확인</button>
                </div>
              </div>

              <div class="row form-warp align-items-center">
                <div class="form-title">
                  비밀번호<span class="text-danger mg-l-3">*</span>
                </div>
                <div class="form-input mg-t-5 mg-md-t-0">
                  <input name="password" type="password" class="form-control wd-100p wd-md-30p wd-lg-25p"
                    maxlength="20">
                </div>
              </div>

              <div class="row form-warp align-items-center">
                <div class="form-title">
                  비밀번호 확인<span class="text-danger mg-l-3">*</span>
                </div>
                <div class="form-input mg-t-5 mg-md-t-0">
                  <input name="comfirmPassword" type="password" class="form-control wd-100p wd-md-30p wd-lg-25p"
                    maxlength="20">
                </div>
              </div>

              <div class="row form-warp align-items-center">
                <div class="form-title">
                  이름<span class="text-danger mg-l-3">*</span>
                </div>
                <div class="form-input mg-t-5 mg-md-t-0">
                  <input name="name" type="text" class="form-control d-inline wd-100p wd-md-20p wd-lg-15p mg-r-10"
                    maxlength="10">
                </div>
              </div>

              <div class="row form-warp align-items-center">
                <div class="form-title">
                  직책
                </div>
                <div class="form-input mg-t-5 mg-md-t-0">
                  <input name="position" type="text" class="form-control d-inline wd-100p wd-md-20p wd-lg-15p mg-r-10"
                    maxlength="100">
                </div>
              </div>

              <div class="row form-warp align-items-center">
                <div class="form-title">
                  연락처<span class="text-danger mg-l-3">*</span>
                </div>
                <div class="form-input mg-t-5 mg-md-t-0">
                  <input id="phoneInpHdn" name="phone" type="hidden">
                  <input name="phone1" type="text" class="form-control d-inline wd-25p wd-md-15p wd-lg-10p"
                    autocomplete="off" onKeyup="this.value=this.value.replace(/[^0-9]/g,'');" maxlength="3"><span
                    class="mg-x-10">-</span>
                  <input name="phone2" type="text" class="form-control d-inline wd-25p wd-md-15p wd-lg-10p"
                    autocomplete="off" onKeyup="this.value=this.value.replace(/[^0-9]/g,'');" maxlength="4"><span
                    class="mg-x-10">-</span>
                  <input name="phone3" type="text" class="form-control d-inline wd-25p wd-md-15p wd-lg-10p"
                    autocomplete="off" onKeyup="this.value=this.value.replace(/[^0-9]/g,'');" maxlength="4">
                </div>
              </div>

              <div class="row form-warp align-items-center">
                <div class="form-title">
                  이메일<span class="text-danger mg-l-3">*</span>
                </div>
                <div class="form-input mg-t-5 mg-md-t-0">
                  <input name="email" type="text" class="form-control d-inline wd-100p wd-md-30p wd-lg-25p"
                    autocomplete="off">
                </div>
              </div>

              <div class="mg-t-10 tx-12"><span class="text-danger">*</span> 표시는 필수항목입니다.</div>

              <div class="row mg-t-20">
                <div class="col-12 text-right">
                  <button type="button" class="btn btn-outline-dark btn-border pd-x-20 mg-r-5"
                    onclick="APP.clearRegister();">취소</button>
                  <button type="submit" class="btn btn-az-primary btn-border pd-x-20">저장</button>
                </div>
              </div>
            </form>
          </div>
        </div>

      </div>
    </div>
  </div>

  {{>ad-script}}
  <script>
    window.APP = {
      checkedId: false,
      createAdmin: function () { // 관리자 등록
        // 유효성 검사
        var form = $(event.target).serializeObject();
        var validate = true;
        var message = '';

        var phone = form.phone1 + '-' + form.phone2 + '-' + form.phone3;

        form.phone = phone;

        if (CHECK.isNull(form.role)) {
          validate = false;
          message = '권한을 선택해주세요.';
        } else if (CHECK.isNull(form.id)) {
          validate = false;
          message = '아이디를 입력해주세요.';
        } else if (!APP.checkedId) {
          validate = false;
          message = '아이디 중복을 확인해주세요.';
        } else if (CHECK.isNull(form.password)) {
          validate = false;
          message = '비밀번호를 입력해주세요.';
        } else if (form.password.length < 8) {
          validate = false;
          message = '비밀번호는 8자리 이상 입력해주세요.';
        } else if (form.password != form.comfirmPassword) {
          validate = false;
          message = '비밀번호 확인이 올바르지 않습니다.';
        } else if (CHECK.isNull(form.name)) {
          validate = false;
          message = '이름을 입력해주세요.';
        } else if (form.phone == '--') {
          validate = false;
          message = '연락처를 입력해주세요.';
        } else if (!CHECK.isCellPhone(form.phone)) {
          validate = false;
          message = '연락처 형식이 올바르지 않습니다.';
        } else if (CHECK.isNull(form.email)) {
          validate = false;
          message = '이메일을 입력해주세요.';
        } else if (!CHECK.isEmail(form.email)) {
          validate = false;
          message = '이메일 형식이 올바르지 않습니다.';
        }

        if (!validate) {
          Swal.fire({
            type: 'error',
            title: '필드 누락',
            text: message,
            confirmButtonColor: '#5b47fb',
            confirmButtonText: '확인',
            heightAuto: false,
          });
          return false;
        }

        AJAX.post('/member/admin', form)
          .then(function (res) {
            Swal.fire({ type: 'success', title: '완료', html: res.message, confirmButtonColor: '#5b47fb', confirmButtonText: '확인' })
              .then(function () {
                location.reload();
              });
          });

      },
      checkId: function () { // 아이디 체크
        var idIpn = $('#idInp').val();
        var validate = true;
        var message = '';

        if (idIpn == '') {
          validate = false;
          message = '아이디를 입력해주세요.';
        } else if (idIpn.length < 6) {
          validate = false;
          message = '아이디는 6자리 이상 입력해주세요.';
        }

        if (!validate) {
          Swal.fire({
            type: 'error',
            title: '필드 누락',
            text: message,
            confirmButtonColor: '#5b47fb',
            confirmButtonText: '확인',
            heightAuto: false,
          });
          return false;
        }

        AJAX.get('/member/checkid', { id: idIpn })
          .then(function (res) {
            APP.checkedId = true;
            $('#idCheckBtn').attr('disabled', true).removeClass('btn-outline-dark').addClass('btn-az-primary').text('확인 완료');
            Swal.fire({ type: 'success', title: '완료', html: res.message, confirmButtonColor: '#5b47fb', confirmButtonText: '확인' })
          }).catch(function (err) {
            APP.checkedId = false;
            $('#idCheckBtn').attr('disabled', false).addClass('btn-outline-dark').removeClass('btn-az-primary').text('중복 확인');
          });
      },
      changeIdInp: function () { // 아이디를 재입력하는 경우
        APP.checkedId = false;
        $('#idCheckBtn').attr('disabled', false).addClass('btn-outline-dark').removeClass('btn-az-primary').text('중복 확인');
      },
      clearRegister: function () { // 폼 초기화
        var _sform = event.target.form;
        Swal.fire({ title: '확인', html: '입력하신 모든 내용이 초기화 됩니다.<br>진행 할까요?', type: 'warning', confirmButtonColor: '#5b47fb', showCancelButton: true, confirmButtonText: '진행', cancelButtonText: '취소', reverseButtons: true })
          .then(function (res) {
            if (res.value) {
              $(_sform).each(function () {
                this.reset();
              });
            }
          });
      },
      init: function () { // 초기 스크립트 실행

      }
    }

    $(document).ready(function () {
      APP.init();
    });
  </script>

</body>

</html>