<!DOCTYPE html>
<html lang="ko">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>타임라인 - {{APP}}</title>

  {{>ad-style}}

</head>

<body class="az-body az-body-sidebar az-body-dashboard-nine az-white">

  {{>ad-hdn}}

  <div id="progress"></div>

  {{>ad-menu active='cthistory'}}

  <div class="az-content az-content-dashboard-nine">

    {{>ad-header}}

    <div class="az-content-header">
      <div class="az-content-header-top">
        <div>
          <h2 class="az-content-title mg-b-5 mg-b-lg-8">타임라인 수정</h2>
          <p class="mg-b-0">기존에 등록된 타임라인을 수정합니다.</p>
        </div>
        <div class="az-dashboard-date">
          <div class="nav-wrapper">
            <nav class="nav az-nav-line">
              <a href="/admin/contents/history" class="nav-link">리스트</a>
              <a href="/admin/contents/history/order" class="nav-link">순서</a>
              <a href="javascript:void(0);" class="nav-link active">수정</a>
            </nav>
          </div>
        </div>
      </div>

    </div>
    <div class="az-content-body">

      <div class="row">
        <div class="col-12">
          <div class="card card-body ht-xl-100p">
            <form method="POST" onsubmit="APP.updateHistory(); return false;">
              <input name="idx" type="hidden" value="{{history.idx}}">
              <div class="form-warp-first"></div>
              <div class="row form-warp align-items-center mg-t-0-f">
                <div class="form-title">
                  일시<span class="text-danger mg-l-3">*</span>
                </div>
                <div class="form-input mg-t-5 mg-md-t-0">
                  <input id="date" name="date" type="text"
                    class="air-datepicker form-control d-inline wd-100p wd-md-20p wd-lg-15p mg-r-10" autocomplete="off"
                    value="{{unSplit '-' history.year history.month}}">
                </div>
              </div>

              <div class="row form-warp align-items-center">
                <div class="form-title">
                  내용<span class="text-danger mg-l-3">*</span>
                </div>
                <div class="form-input mg-t-5 mg-md-t-0">
                  <input name="contents" type="text" class="form-control d-inline wd-100p wd-md-60p wd-lg-50p"
                    autocomplete="off" value="{{history.contents}}">
                </div>
              </div>

              <div class="mg-t-10 tx-12"><span class="text-danger">*</span> 표시는 필수항목입니다.</div>

              <div class="row mg-t-20">
                <div class="col-12 text-right">
                  <button type="button" class="btn btn-outline-dark btn-border pd-x-20 mg-r-5"
                    onclick="APP.cancle();">취소</button>
                  <button type="submit" class="btn btn-az-primary btn-border pd-x-20">저장</button>
                </div>
              </div>
            </form>
          </div>
        </div>

      </div>

    </div>
  </div>

  {{>ad-script}}
  <script>
    window.APP = {
      updateHistory: function () { // 타임라인 수정

        var form = $(event.target).serializeObject();

        var validate = true;
        var message = '';

        if (form.date == '') {
          validate = false;
          message = '일시를 선택해주세요.';
        } else if (!form.date.match(/^(19|20)\d{2}-(0[1-9]|1[012])$/)) {
          validate = false;
          message = '일시의 형태가 올바르지 않습니다.';
        } else if (form.contents == '') {
          validate = false;
          message = '내용을 입력해주세요.';
        }

        if (!validate) {
          Swal.fire({
            type: 'error',
            title: '필드 누락',
            text: message,
            confirmButtonColor: '#5b47fb',
            confirmButtonText: '확인',
            heightAuto: false,
          });
          return false;
        }

        var dateStr = form.date.split('-');
        form.year = dateStr[0];
        form.month = dateStr[1];

        AJAX.put('/history/' + form.idx, form)
          .then(function (res) {
            Swal.fire({ type: 'success', title: '완료', text: res.message, confirmButtonColor: '#5b47fb', confirmButtonText: '확인' })
              .then(function () { location.href = '/admin/contents/history'; });
          });

        return false;

      },
      cancle: function () { // 뒤로가기 처리
        Swal.fire({ title: '확인', html: '입력하신 정보가 반영되지 않습니다.<br>진행 할까요?', type: 'warning', confirmButtonColor: '#5b47fb', showCancelButton: true, confirmButtonText: '진행', cancelButtonText: '취소', reverseButtons: true })
          .then(function (res) {
            if (res.value) {
              location.href = '/admin/contents/history';
            }
          });
      },
      init: function () { // 초기 스크립트 실행
        // 데이트 피커
        $('.air-datepicker').datepicker({
          language: 'ko',
          autoClose: true,
          toggleSelected: false,
          view: 'months',
          minView: 'months',
          dateFormat: 'yyyy-mm',
          maxDate: new Date()
        });

        $('#date').datepicker().data('datepicker').selectDate(moment({{ history.year }} + '-' + {{ history.month }} + '-01').toDate());
    $('#date').datepicker().data('datepicker').date = moment({{ history.year }} + '-' + {{ history.month }} + '-01').toDate();
      }
    }

    $(document).ready(function () {
      APP.init();
    });
  </script>

</body>

</html>